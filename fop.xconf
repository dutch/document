        <font embed-url="/usr/share/fonts/truetype/liberation/LiberationSerif-Bold.ttf">
          <font-triplet name="Helvetica" style="normal" weight="bold"/>
        </font>
      </fonts>
    </renderer>
  </renderers>
</fop>
